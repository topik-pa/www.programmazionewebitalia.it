extends ../../layout.pug

block append meta
  title #{title}
  meta(name="description" content=description)
  meta(name="keywords" content="javascript, closure, definizione, esempi, utilizzo")
  link(rel="canonical", href=proj_url + url)

  meta(name="og:url" content=proj_url + url)
  meta(name="og:type" content="article")
  meta(name="og:title" content=title)
  meta(name="og:site_name" content="Programmazione Web Italia")
  meta(name="og:description" content=description)
  meta(name="og:image" content=proj_url + "/assets/images/post/post-js-closure-cover.webp")

block main
  main(class="tworows")
    article
      include ./javascript-closure-article.pug

    include ./side.pug

block viewscripts 
  script(async src="https://cpwebassets.codepen.io/assets/embed/ei.js")
  script(type='application/ld+json').
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "datePublished": "2023-09-15",
      "dateModified": "2023-10-22",
      "url": "#{proj_url + url}",
      "name": "#{title}",
      "headline": "#{title}",
      "description": "#{description}",
      "about": {
        "@type": "ComputerLanguage",
        "name": "JavaScript"
      },
      "image": "#{proj_url}/assets/images/post/post-js-closure-cover.webp",
      "author": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "copyrightHolder": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "#{proj_name}",
        "url": "#{proj_url}",
        "logo": "#{logo}"
      }
    }
    
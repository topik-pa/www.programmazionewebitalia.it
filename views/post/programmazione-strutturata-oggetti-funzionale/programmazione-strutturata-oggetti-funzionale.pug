extends ../../layout.pug

block append meta
  title #{title}
  meta(name="description" content=description)
  meta(name="keywords" content="paradigmi, programmazione, strutturata, oggetti, funzionale, architettura, software, vantaggi, svantaggi")
  link(rel="canonical", href=proj_url + url)

  meta(name="og:url" content=proj_url + url)
  meta(name="og:type" content="article")
  meta(name="og:title" content=title)
  meta(name="og:site_name" content="Programmazione Web Italia")
  meta(name="og:description" content="Programmazione Web Italia")
  meta(name="og:image" content=proj_url + "/assets/images/post/006-programmazione-strutturata-oggetti-funzionale/programmazione-strutturata-oggetti-funzionale.webp")

block main
  main(class="tworows")
    article
      include ./programmazione-strutturata-oggetti-funzionale-article.pug

      include /components/shared/coffee/coffee.pug

    include ./side.pug

block viewscripts 
  if prod
    script(defer, src='https://platform.linkedin.com/in.js')
  script(type='application/ld+json').
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "datePublished": "2024-04-09",
      "dateModified": "2024-10-22",
      "url": "#{proj_url + url}",
      "name": "#{title}",
      "headline": "#{title}",
      "description": "#{description}",
      "image": "#{proj_url}/assets/images/post/006-programmazione-strutturata-oggetti-funzionale/programmazione-strutturata-oggetti-funzionale.webp",
      "author": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "copyrightHolder": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "#{proj_name}",
        "url": "#{proj_url}",
        "logo": "#{logo}"
      }
    }
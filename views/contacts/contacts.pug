extends ../layout.pug

block append meta
  title #{title} | #{proj_name}
  meta(name="description" content="Contatti")
  meta(name="keywords" content="")
  meta(name="robots" content="")
  link(rel="canonical", href=proj_url + url)

  meta(name="og:url" content=proj_url)
  meta(name="og:type" content="website")
  meta(name="og:title" content=title + ' | ' + proj_name)
  meta(name="og:site_name" content="Programmazione Web Italia")
  meta(name="og:description" content="Contatti")
  meta(name="og:image" content=proj_url + "/assets/images/logo.png")

block main
  main
    section
      h1 #{title}
      p Contatta PWI per domande, informazioni o altre necessit√† attraverso i seguenti canali.
      section 
        h2 Tramite email
        p E' possibile utilizzare questo indirizzo email: 
          a(href="mailto:info@progweb.it") info@progweb.it
      section
        h2 Tramite Social
        p E' possibile mandare un messaggio tramite i seguenti Social
        ul 
          each social in socials
            li
              a(href=social.url, title=social.name) #[i(class=social.icon)] #{social.name}

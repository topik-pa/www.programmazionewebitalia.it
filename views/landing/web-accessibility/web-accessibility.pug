extends ../../layout-landing.pug

block append meta

  title !{title}
  meta(name="description" content=description)

  if lang==='it'
    meta(name="keywords" content="web, accessibilit√†, analisi, ottimizzazione, linee, guida, WCAG, european, accessibility, act, udine, friuli, 2025")
    link(rel="canonical", href=proj_url + '/web-accessibility')
  else 
    meta(name="keywords" content="web, accessibility, analysis, optimization, guide, lines, WCAG, european, accessibility, act, 2025")
    link(rel="canonical", href=proj_url + '/web-accessibility/en')

  meta(name="og:url" content=proj_url + url)
  meta(name="og:site_name" content="PWI - Programmazione Web Italia")
  meta(name="og:type" content="article")
  meta(name="og:title" content=title)
  meta(name="og:image" content=proj_url + "/assets/images/landing/web-accessibility/web-accessibility-og-image-" + lang + ".webp")
  meta(name="og:description" content=description)

  link(rel="alternate", href="https://www.progweb.it/web-accessibility/it", hreflang="it")
  link(rel="alternate", href="https://www.progweb.it/web-accessibility/en", hreflang="en")
  link(rel="alternate", href="https://www.progweb.it/web-accessibility", hreflang="x-default")

  link(rel="stylesheet", type="text/css", href="/views/landing/web-accessibility/style.css")

block main
  main
    include ./article.pug

block viewscripts 
  script(defer, src='/views/landing/web-accessibility/script.js')
  script(type='application/ld+json').
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "datePublished": "2024-09-05",
      "dateModified": "2024-09-11",
      "url": "#{proj_url + url}",
      "name": "#{title}",
      "headline": "#{title}",
      "description": "#{description}",
      "image": "#{proj_url + '/assets/images/landing/web-accessibility/web-accessibility-og-image-' + lang +'.webp'}",
      "author": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "copyrightHolder": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "#{proj_name}",
        "url": "#{proj_url}",
        "logo": "#{logo}"
      }
    }
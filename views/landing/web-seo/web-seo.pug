extends ../../layout-landing.pug

block append meta
  title #{title}
  meta(name="description" content=title)
  meta(name="keywords" content="web, seo")
  link(rel="canonical", href=proj_url + url)

  meta(name="og:url" content=proj_url + url)
  meta(name="og:type" content="article")
  meta(name="og:title" content=title)
  meta(name="og:site_name" content="PWI - Programmazione Web Italia")
  meta(name="og:description" content=title)
  meta(name="og:image" content=proj_url + "/assets/images/landing/web-seo/web-seo-og-image.png")

  link(rel="stylesheet", type="text/css", href="/views/landing/web-seo/web-seo.css")

block main
  main
    include ./article.pug

block viewscripts 
  script(defer, src='/views/landing/web-seo/web-seo.js')
  script(type='application/ld+json').
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "datePublished": "2024-09-01",
      "dateModified": "2024-09-01",
      "url": "#{proj_url + url}",
      "name": "#{title}",
      "headline": "#{title}",
      "description": "#{title}",
      "image": "#{proj_url}/assets/images/landing/web-seo/web-seo-og-image.png",
      "author": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "copyrightHolder": {
        "@type": "Person",
        "name": "#{owner}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "#{proj_name}",
        "url": "#{proj_url}",
        "logo": "#{logo}"
      }
    }